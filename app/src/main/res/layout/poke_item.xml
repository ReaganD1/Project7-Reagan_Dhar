<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/poke_image"
        android:layout_width="400dp"
        android:layout_height="256dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="6dp" />


    <TextView
        android:id="@+id/poke_name"
        android:layout_width="144dp"
        android:layout_height="51dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="4dp"
        android:background="@color/PokeRed"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="NAME"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/PokeAppearance.Quote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poke_image" />

    <TextView
        android:id="@+id/poke_type"
        android:layout_width="144dp"
        android:layout_height="50dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="64dp"
        android:background="@color/PokeRed"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="TYPE"
        android:textAllCaps="true"
        android:textAppearance="@style/PokeAppearance.Quote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poke_image" />

    <TextView
        android:id="@+id/poke_ability"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="8dp"
        android:background="@color/PokeRed"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="ABILITY"
        android:textAllCaps="true"
        android:textAppearance="@style/PokeAppearance.Quote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poke_type" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="80dp"
        android:layout_height="43dp"
        android:text="NAME: "
        android:textAlignment="center"
        android:textAppearance="@style/PokeAppearance2.Quote"
        android:fontFamily="@font/eagle_lake"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.712" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="77dp"
        android:layout_height="38dp"
        android:text="ABILITY: "
        android:textAlignment="center"
        android:textAppearance="@style/PokeAppearance2.Quote"
        android:fontFamily="@font/eagle_lake"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.287"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.997" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="79dp"
        android:layout_height="37dp"
        android:text="TYPE: "
        android:textAlignment="center"
        android:textAppearance="@style/PokeAppearance2.Quote"
        android:fontFamily="@font/eagle_lake"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.283"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.847" />

</androidx.constraintlayout.widget.ConstraintLayout>